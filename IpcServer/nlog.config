<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      throwConfigExceptions="true">

    <!-- 定义日志目录变量 -->
    <variable name="logDir" value="logs" />

    <targets>
        <!-- 控制台输出 -->
        <target xsi:type="Console" name="console"
                layout="[${longdate}] [${level:uppercase=true}] ${message} ${exception:format=toString}" />

        <!-- Info 日志文件 -->
        <target xsi:type="File" name="infoFile"
                fileName="${logDir}/info/info-${shortdate}.log"
                layout="[${longdate}] [${level:uppercase=true}] ${message} ${exception:format=toString}"
                archiveEvery="Day"
                maxArchiveFiles="7"
                encoding="utf-8" />

        <!-- Warn 日志文件 -->
        <target xsi:type="File" name="warnFile"
                fileName="${logDir}/warn/warn-${shortdate}.log"
                layout="[${longdate}] [${level:uppercase=true}] ${message} ${exception:format=toString}"
                archiveEvery="Day"
                maxArchiveFiles="7"
                encoding="utf-8" />

        <!-- Error 日志文件 -->
        <target xsi:type="File" name="errorFile"
                fileName="${logDir}/error/error-${shortdate}.log"
                layout="[${longdate}] [${level:uppercase=true}] ${message} ${exception:format=toString}"
                archiveEvery="Day"
                maxArchiveFiles="7"
                encoding="utf-8" />
    </targets>

    <rules>
        <!-- 控制台输出所有 Info 及以上 -->
        <logger name="*" minlevel="Info" writeTo="console" />

        <!-- Info 日志（只记录 Info，不包含 Warn/Error） -->
        <logger name="*" minlevel="Info" maxlevel="Info" writeTo="infoFile" />

        <!-- Warn 日志（只记录 Warn，不包含 Error） -->
        <logger name="*" minlevel="Warn" maxlevel="Warn" writeTo="warnFile" />

        <!-- Error 及以上日志 -->
        <logger name="*" minlevel="Error" writeTo="errorFile" />
    </rules>
</nlog>